{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "importHelpers": true,
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "pretty": true,
    "stripInternal": true,
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "typeRoots": ["./@types"],
  "include": ["src"]
}
