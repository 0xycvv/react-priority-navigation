{
  "compilerOptions": {
    "outDir": "dist",
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "moduleResolution": "node",
    "importHelpers": true,
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "pretty": true,
    "esModuleInterop": true,
    "stripInternal": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "typeAcquisition": {
    "enable": true
  },
  "include": ["src", "@types"]
}
