{
  "name": "react-priority-navigation",
  "version": "0.2.1",
  "description": "priority navigation component for react",
  "main": "dist/bundle.js",
  "module": "dist/bundle.es6.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && NODE_ENV=production rollup -c",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest"
  },
  "author": "Eric Yip (https://github.com/ericyip)",
  "license": "MIT",
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "rc-trigger": "^2.5.4",
    "resize-observer-polyfill": "^1.5.0",
    "uniqid": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">= 16.3.0",
    "react-dom": ">= 15",
    "styled-components": "^>= 3"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.52",
    "@babel/core": "7.0.0-beta.52",
    "@babel/plugin-proposal-class-properties": "7.0.0-beta.52",
    "@babel/preset-env": "7.0.0-beta.52",
    "@babel/preset-react": "7.0.0-beta.52",
    "@babel/preset-stage-3": "7.0.0-beta.52",
    "@babel/preset-typescript": "7.0.0-beta.52",
    "@storybook/addon-actions": "3.4.8",
    "@storybook/addon-links": "3.4.8",
    "@storybook/addon-storyshots": "3.4.8",
    "@storybook/react": "3.4.8",
    "@types/lodash.debounce": "4.0.3",
    "@types/node": "9.6.23",
    "@types/react": "16.4.6",
    "@types/react-dom": "16.0.6",
    "@types/storybook__react": "3.0.8",
    "@types/uniqid": "4.1.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.4.0",
    "jest": "23.4.0",
    "jest-styled-components": "5.0.1",
    "prettier": "1.13.7",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-test-renderer": "16.4.1",
    "rollup": "0.62.0",
    "rollup-plugin-commonjs": "9.1.3",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-postcss": "1.6.2",
    "styled-components": "3.3.3",
    "ts-jest": "23.0.0",
    "tslint-config-prettier": "1.13.0",
    "tslint-react": "3.6.0",
    "typescript": "2.9.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.jest.json"
      }
    }
  }
