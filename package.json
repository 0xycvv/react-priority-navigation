{
  "name": "react-priority-navigation",
  "version": "0.3.1",
  "description": "priority navigation component for react",
  "main": "dist/bundle.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && NODE_ENV=production rollup -c",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "test": "jest"
  },
  "author": "Eric Yip (https://github.com/ericyip)",
  "license": "MIT",
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "resize-observer-polyfill": "^1.5.1"
  },
  "peerDependencies": {
    "react": ">= 16.3.0",
    "react-dom": ">= 15"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.4.0",
    "@babel/plugin-proposal-class-properties": "7.4.0",
    "@babel/preset-env": "7.4.1",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@storybook/addon-actions": "5.0.3",
    "@storybook/addon-links": "5.0.3",
    "@storybook/addon-storyshots": "5.0.3",
    "@storybook/react": "5.0.3",
    "@types/lodash.debounce": "4.0.6",
    "@types/node": "11.11.4",
    "@types/react": "16.8.8",
    "@types/react-dom": "16.8.2",
    "@types/storybook__react": "4.0.1",
    "@types/styled-components": "^4.1.12",
    "babel-jest": "24.5.0",
    "babel-loader": "^8.0.5",
    "jest": "24.5.0",
    "jest-styled-components": "6.3.1",
    "prettier": "1.16.4",
    "react": "16.8.4",
    "react-dom": "16.8.4",
    "react-scripts": "^2.1.8",
    "react-test-renderer": "16.8.4",
    "rollup": "1.7.0",
    "rollup-plugin-commonjs": "9.2.1",
    "rollup-plugin-node-resolve": "4.0.1",
    "rollup-plugin-postcss": "2.0.3",
    "styled-components": "4.1.3",
    "ts-jest": "24.0.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "3.6.0",
    "typescript": "3.3.4000"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.jest.json"
      }
    }
  }
}
